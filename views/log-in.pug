extends layout.pug
append head
  link(rel="stylesheet" href="/stylesheets/log-in.css")
  script(src=`/javascripts/login.js` type="module" defer)
include utils.pug

block content
  +validationErrorSummary(errors)
  div(class='box')
    h1 Log In
    form(action='/users/login' method='post')
      input(type='hidden' name='_csrf' value=csrfToken)
      +field('Email Address', 'email', email, 'email')
      +field('Password', 'password', null, 'password')
      div(class='py-4 two-buttons')
        button(type='submit' class='btn btn-primary') Login
        button(type="" class="btn btn-primary demo") Demo
    div
      p: a(href='/users/signup') Don't have an account?  